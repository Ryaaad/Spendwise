// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  Name     String
  Email    String    @unique
  LastName String
  Password String
  Img      String
  Product  Product[]
  Spent    Spent[]
  Earn     Earn[]
  Have     Have[]
}

model Product {
  idPR   Int     @id @default(autoincrement())
  NamePR String
  Icone  String
  userId Int
  user   User    @relation(fields: [userId], references: [id])
  Spent  Spent[]
}

model Spent {
  idSpent  Int      @id @default(autoincrement())
  userId   Int
  idPR     Int
  Date     DateTime @default(now())
  Moneyout Float
  user     User     @relation(fields: [userId], references: [id])
  product  Product  @relation(fields: [idPR], references: [idPR])
}

model Achievement {
  idAch   Int    @id @default(autoincrement())
  nameAch String
  Img     String
  Have    Have[]
}

model Earn {
  idEarn  Int    @id @default(autoincrement())
  userId  Int
  MoneyIn Int
  Cause   String
  user    User   @relation(fields: [userId], references: [id])
}

model Have {
  userId      Int
  AchiId      Int
  user        User        @relation(fields: [userId], references: [id])
  achievement Achievement @relation(fields: [AchiId], references: [idAch])

  @@id([userId, AchiId])
}
